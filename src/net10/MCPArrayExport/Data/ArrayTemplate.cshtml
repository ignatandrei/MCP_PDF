@inherits RazorBlade.PlainTextTemplate<MCPArrayExport.Data.ArrayData>
@{
    
    var nr = Model.JsonArray.Length;
}
<table border="1">
    <thead>
        <tr>
            <th>Nr</th>        @foreach (var item in Model.Properties)
        {

            <th>@item</th>
           
        }
    </thead>
    <tbody>
        @for (int i = 0; i < nr; i++)
        {
            var jsonObject = Model.JsonArray[i];
            
            <tr>
                <td>@(i + 1)</td>
                @foreach (var item in Model.Properties)
                {
                    var value = jsonObject.GetProperty(item);
                    var jsonValue = jsonObject.GetJsonValue(value);
                    <td>@jsonValue</td>
                }
            </tr>
        }
   
</table>
